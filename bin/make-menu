#!/usr/bin/env bash

set -x

DMENU="$(which rofi)"
PROMPT="? "

mode="dmenu"

while getopts ":rwsPe:p:f:ml:w:h:" opt
do
    case $opt in
        r) mode="run";;
        w) mode="window";;
        s) mode="spotlight";;
        P) mode="prompt";;
        e) message="$OPTARG"
           mode="message";;
        p) PROMPT="$OPTARG";;
        f) FONT="$OPTARG";;
        m) SELECTEDBG="$BG"
           SELECTEDFG="$FG";; # match colors
        l) LINES="$OPTARG";;
        w) width="$OPTARG";;
        h) height="$OPTARG";;
        \?) "Invalid option -$OPTARG";;
        :) "-$OPTARG requires an argument"
    esac
done


if [[ "$mode" = "dmenu" ]]
then
    $DMENU -dmenu -p "$PROMPT"
elif [[ "$mode" = "prompt" ]]
then
    $DMENU -separator-style none -dmenu -mesg "$PROMPT" -p "> "
elif [[ "$mode" = "run" ]]
then
    $DMENU -show "run" -fuzzy -display-run "$PROMPT"
elif [[ "$mode" = "spotlight" ]]
then
    $DMENU -modi drun -show drun -fuzzy -display-drun "$PROMPT"
elif [[ "$mode" = "window" ]]
then
    $DMENU -modi -font "Ubuntu Mono 18" window -show window -fuzzy -display-window "$PROMPT"
else
    $DMENU -e "$message" -separator-style none
fi

#!/usr/bin/env bash

set -x

DMENU=$(which rofi)
PROMPT="?"
FONT='Ubuntu 12'
LINES=5

bg="#1c1c1c"
bg_active="#dcdccc"
bg_urgent="#bc8383"

fg="#dcdccc"
fg_active="#1c1c1c"
fg_urgent="#1c1c1c"

hlbg="#688080"
hlbg_active="#ffffff"
hlbg_urgent="#cc9393"

hlfg="#1c1c1c"
hlfg_active="#1c1c1c"
hlfg_urgent="#1c1c1c"

border="#688080"

mode="dmenu"

while getopts ":r:se:p:f:ml:w:h:" opt
do
    case $opt in
        r) mode="run";;
        s) mode="spotlight";;
        e) message="$OPTARG"
           mode="message";;
        p) PROMPT="$OPTARG";;
        f) FONT="$OPTARG";;
        m) SELECTEDBG="$BG"
           SELECTEDFG="$FG";; # match colors
        l) LINES="$OPTARG";;
        w) width="$OPTARG";;
        h) height="$OPTARG";;
        \?) "Invalid option -$OPTARG";;
        :) "-$OPTARG requires an argument"
    esac
done


if [[ "$mode" = "dmenu" ]]
then
    $DMENU -dmenu -p "$PROMPT"
elif [[ "$mode" = "run" ]]
then
    $DMENU -modi combi -show combi -combi-modi "window,run,drun" -fuzzy
elif [[ "$mode" = "spotlight" ]]
then
    $DMENU -modi combi -show combi -combi-modi "window,drun" -fuzzy
else
    $DMENU -dmenu -e "$message" -separator-style none
fi

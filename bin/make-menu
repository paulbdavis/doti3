#!/usr/bin/env bash

set -x

DMENU="$(which rofi)"
PROMPT="? "

mode="dmenu"

while getopts ":rse:p:f:ml:w:h:" opt
do
    case $opt in
        r) mode="run";;
        s) mode="spotlight";;
        e) message="$OPTARG"
           mode="message";;
        p) PROMPT="$OPTARG";;
        f) FONT="$OPTARG";;
        m) SELECTEDBG="$BG"
           SELECTEDFG="$FG";; # match colors
        l) LINES="$OPTARG";;
        w) width="$OPTARG";;
        h) height="$OPTARG";;
        \?) "Invalid option -$OPTARG";;
        :) "-$OPTARG requires an argument"
    esac
done


if [[ "$mode" = "dmenu" ]]
then
    $DMENU -dmenu -p "$PROMPT"
elif [[ "$mode" = "run" ]]
then
    $DMENU -show "run" -fuzzy -display-run "$PROMPT"
elif [[ "$mode" = "spotlight" ]]
then
    $DMENU -sidebar-mode -modi drun,window,ssh -show drun -fuzzy -display-drun "Apps" -display-window "Windows" -display-ssh "SSH"
else
    $DMENU -e "$message" -separator-style none
fi
